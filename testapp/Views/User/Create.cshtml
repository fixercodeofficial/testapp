@model testapp.Models.User

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatDateTime" />
            <div class="form-group">
                <label asp-for="UserName" class="control-label">User Name</label>
                <div class="input-group">
                    
                    <input asp-for="UserName" class="form-control" required />
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="mb-3">
                    <label asp-for="Gender">Gender </label>
                    <select class="form-control" asp-for="Gender" id="StudentGender" required>
                        <option>Select Gender</option>
                        <option>Male</option>
                        <option>Female</option>
                    </select>
                    @*<input asp-for="Gender" class="form-control" />*@
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="BirthDay" class="control-label"></label>
                        <input asp-for="BirthDay" class="form-control" type="date" required />
                        <span asp-validation-for="BirthDay" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                
                <div class="form-group">
                    <label asp-for="Address" class="control-label">Address</label>
                    <div class="input-group">

                        <input asp-for="Address" class="form-control" required />
                    </div>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div></br>
            <div class="from-check">
                <input class="from-check-input" type="checkbox" asp-for="Status" />
                <label class="from-check-lebel" asp-for="Status">Is Active</label>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-6 offset-md-3" >
                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>



